# --- SwiftyCare API â€” Environment Variables ---
# Copy this file to .env and fill in real values:
#   cp .env.example .env

# MongoDB connection string (required)
# Local:   mongodb://localhost:27017/swiftycare
# Atlas:   mongodb+srv://<user>:<password>@<cluster>.mongodb.net/swiftycare?retryWrites=true&w=majority
MONGODB_URI=mongodb://localhost:27017/swiftycare

# OpenAI API key (required for AI summary & diagnosis features)
OPENAI_API_KEY=sk-your-openai-api-key-here

# Server port (default: 3001)
PORT=3001

# Allowed CORS origins (comma-separated, optional)
# Leave empty to use built-in defaults (localhost, demo.swifty-care.com, tunnel domains)
CORS_ORIGINS=
